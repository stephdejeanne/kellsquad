
<div class="card" style="width: 36rem;">
  <img src=<%= @quad.img %> class="card-img-top" alt="photo du quad">
  <div class="card-body">
    <h1>Votre réservation</h1>
    <h5 class="card-title">Le <%= @quad.name %></h5>
    <p class="card-text">
    <ul>
      <li>Début de la réservation : <%= @booking.start %></li>
      <li>Fin de la réservation : <%= @booking.end %></li>
      <li>Coût total : <%= @quad.price %> €</li>
    <ul></ul>
    </p>
    <a href="#" class="btn btn-primary">Confirmer votre réservation</a>
  </div>
</div>
